{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "module": "ESNext",
      "target": "ESNext",
      "strict": true,
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist", "src/app/**/*"]
  }
  